mixin evaluation-item(item)
    div(class="border border-[#0000001A] rounded-[20px] sm:px-[32px] px-[24px] sm:py-[28px] py-[24px]")
        div(class="flex gap-[6px] items-center sm:text-[23px] text-[20px] text-[#FFC633] sm:mb-[15px] mb-[12px]")
            - for(var i = 1; i <= 5; i++)
                i(class="fa-solid fa-star")
        div(class="flex items-center gap-x-[4px] sm:mb-[12px] mb-[8px]")
            h3(class="font-[700] sm:text-[20px] text-[16px] text-primary") #{item.name}
            i(class="fa-solid fa-circle-check sm:text-[20px] text-[16px] text-[#01AB31]")
        div(class="font-[400] sm:text-[16px] text-[14px] text-[#00000099] items-center")
            | #{item.desc}